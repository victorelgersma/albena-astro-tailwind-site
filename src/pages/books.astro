---
import books from '../data/books.json';
import RootLayout from "@/layouts/RootLayout.astro";
import  BookCard  from 'src/components/BookCard.astro'

import { useTranslations } from "@/i18n";
const t = useTranslations();
---

<RootLayout
  title={t("siteMetadata.title")}
  description={t("siteMetadata.description")}
>

<!-- How do I make this a 3 column layout -->
<h1 class='text-3xl font-bold text-black dark:text-white'>Books</h1>
<div class="book-list">
  {books.map((book) => (
  <BookCard book={book}/>
  ))}
</div>

<style>
  .book-list {
    display: grid;
    grid-template-columns: repeat(3,  1fr);
    gap: 16px;
  }
</style>

</RootLayout>
